<div id="js-microcredit_loan-town-wrapper" class="input required form-group">
  <%= label :microcredit_loan, :town, class: "control-label", required: :required do %>
    <%= title %><% if required %><abbr title="<%= t 'microcredit.new_loan.required' %>">*</abbr><% end %>
  <% end %>
    <span class="form-wrapper">
    <% towns = get_towns(country, province) %>
    <% if province=="-" || towns.length>0 %>
        <% placeholder = "-- %s --"%t('microcredit.common.choose_town') %>
        <%= select_tag "microcredit_loan[town]", options_from_collection_for_select(towns, "code", "name", town), {disabled: disabled, required: required, data: {placeholder: placeholder}, prompt: placeholder } %>
    <% else %>
      <%= text_field(:microcredit_loan, :town, class: "input-xl form-control") %>
    <% end %>
    </span>
</div>
