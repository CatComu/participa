<%= content_tag(:h2, t("user.change_email"))%>

<section class="content-text">
  <p> <%= t('user.change_email_explain') %> </p>
</section>

<% if resource.class.reconfirmable && resource.unconfirmed_email.present? %>
    <%= alert_box "" do %>
        <%= t("devise.messages.waiting_confirmation", email: resource.unconfirmed_email) %>
    <% end %>
<% end %>

<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <fieldset>
      <div class="inputlabel-box">
        <%= f.input :email, label: t("devise.new_email"), input_html: {class: 'input-m'} %>
      </div>

      <div class="inputlabel-box">
        <%= f.input :current_password,
                    required: true,
                    hint: t("devise.hints.current_password"),
                    input_html: { class: 'input-m' } %>
      </div>

      <%= f.actions class: 'enter' do %>
          <%= f.action :submit, label: t("user.change_email"), button_html: {class: "button"} %>
      <% end %>
    </fieldset>
<% end %>
