<%= content_tag(:h2, t("bec.user.change_password")) %>
<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <fieldset>
      <legend class="invisible">
        <span>Recuperar contrase√±a</span>
      </legend>

      <div class="inputlabel-box">
        <%= f.input :password,
                    label: t('devise.new_password'),
                    required: true,
                    input_html: {autocomplete: "off", class: 'input-m'},
                    hint: t("devise.hints.password") %>
      </div>

      <div class="inputlabel-box">
        <%= f.input :password_confirmation,
                    label: t('devise.new_password_confirmation'),
                    required: true,
                    input_html: {class: 'input-m'} %>
      </div>

      <div class="inputlabel-box">
        <%= f.input :current_password,
                    required: true,
                    hint: t("devise.hints.current_password"),
                    input_html: {class: 'input-m'} %>
      </div>
      <%= f.actions class: 'enter' do %>
          <%= f.action :submit, label: t("bec.user.change_password"), button_html: {class: "button"} %>
      <% end %>
    </fieldset>
<% end %>
