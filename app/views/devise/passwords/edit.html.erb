<%= content_for :title, t("devise.titles.change_password") %>

<div class="content-content">
  <div class="row">
    <div class="col-md-2 col-sm-2 col-xs-6">
      <div class="box-info">
        <%= render 'logo' %>
      </div>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-6">
      <div class="box-info login-box">
        <h2><%= t("devise.titles.change_password") %></h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div>
            <%= f.label :password, class: 'invisible' %>
            <%= f.password_field :password,
                                 autofocus: true,
                                 class: 'input-m',
                                 placeholder: t("devise.labels.new_password") %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: 'invisible' %>
            <%= f.password_field :password_confirmation,
                                 required: true,
                                 class: 'input-m',
                                 placeholder: t("devise.labels.new_password_confirmation") %>
          </div>

          <div class='enter'>
            <%= f.submit t("devise.buttons.change_password"), class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
