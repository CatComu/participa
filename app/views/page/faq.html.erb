<% content_for :title, t('.title') %>

<div class="content-content">
<div class="box-info">
<h2><%= t('.title')%></h2>

<section class="cd-faq">
  <ul class="cd-faq-categories">
    <li><a class="selected" href="#general"><%= t('.general')%></a></li>
    <li><a href="#inscripcion"><%= t('.inscription')%></a></li>
    <li><a href="#inscripcion-errores"><%= t('.inscription_errors')%></a></li>
    <% if Features.presential_verifications? %>
      <li><a href="#verificaciones"><%= t('.verification')%></a></li>
    <% end %>
    <% if Features.elections? %>
      <li><a href="#votaciones"><%= t('.voting')%></a></li>
    <% end %>
  </ul> <!-- cd-faq-categories -->

  <div class="cd-faq-items">

    <ul id="general" class="cd-faq-group">
      <li class="cd-faq-title"><h2><%= t('.general')%></h2></li>
      <%= t('.faq1_html')%>
    </ul> <!-- cd-faq-group -->

    <ul id="inscripcion" class="cd-faq-group">
      <li class="cd-faq-title"><h2><%= t('.inscription')%></h2></li>
      <%= t('.faq2_html')%>
    </ul> <!-- cd-faq-group -->

    <ul id="inscripcion-errores" class="cd-faq-group">
      <li class="cd-faq-title"><h2><%= t('.inscription_errors')%></h2></li>
      <%= t('.faq3_html')%>
    </ul> <!-- cd-faq-group -->

    <% if Features.presential_verifications? %>
      <ul id="verificaciones" class="cd-faq-group">
        <li class="cd-faq-title"><h2><%= t('.verification')%></h2></li>
        <%= t('.faq4_html', verifications_url: verification_show_path)%>
      </ul> <!-- cd-faq-group -->
    <% end %>

    <% if Features.elections? %>
      <ul id="votaciones" class="cd-faq-group">
        <li class="cd-faq-title"><h2><%= t('.voting')%></h2></li>
        <%= t('.faq5_html')%>
      </ul> <!-- cd-faq-group -->
    <% end %>

  </div> <!-- cd-faq-items -->
  <a href="#0" class="cd-close-panel">Close</a>
</section> <!-- cd-faq -->
</div>
</div>
