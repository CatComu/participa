<%= semantic_form_for([:admin, @group], builder: Formtastic::FormBuilder) do |f| %>
  <%= f.inputs "Group" do %>
    <%= f.input :name %>
    <%= f.input :starts_at, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :ends_at, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :description %>
    <%= f.input :is_institutional %>
    <%= f.input :has_location %>
  <% end %>
  <%= f.inputs "Territory", id: "territory_form" do %>
    <%= f.input :location_type %>
    <%= f.input :territory_holder, as: :select, collection: [] %>
  <% end %>
  <%= f.actions %>
<% end %>

